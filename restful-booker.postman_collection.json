		{
			"name": "UpdateBooking",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"pm.test(\"Check new firstname\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData.firstname).to.eql(\"James\");",
							"});",
							"pm.test(\"Check new lastname\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData.lastname).to.eql(\"Brown\");",
							"});",
							"pm.test(\"Check new totalprice\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData.totalprice).to.eql(111);",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
